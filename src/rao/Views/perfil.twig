    	<div class="collapse navbar-collapse navbar-ex1-collapse">
    		<ul class="nav navbar-nav">
    			<li class="active"><a href="{{ path_for('perfil.main') }}">Perfil</a></li>
    			<li><a href="{{ path_for('cuenta.main') }}">Cuenta</a></li>
